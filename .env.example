# Copy to .env and adjust values for your environment

# Django secret key (generate a long random string)
DJANGO_SECRET_KEY=replace-me-with-a-long-secret
# Set True only for local development
DEBUG=False
# Comma separated list of hosts (Render auto host + custom domain)
ALLOWED_HOSTS=.onrender.com,your-custom-domain.com

# Database (Render will inject DATABASE_URL automatically for Postgres)
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Optional security flags (enable after confirming HTTPS works)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

